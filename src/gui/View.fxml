         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="40.0" layoutY="110.0" promptText="First number" />
      <TextField fx:id="txtNumber2" layoutX="40.0" layoutY="164.0" promptText="Second number" />
      <Button fx:id="btSum" layoutX="40.0" layoutY="216.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
